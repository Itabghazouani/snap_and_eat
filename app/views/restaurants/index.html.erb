<div class="background-photo mt-0 pt-3">
  <h1>Snap And Eat</h1>
  <h2 id="center-h2">Get what you're craving!!! 🍕</h2>


  <%# Search part %>
  <div class ="container mt-3">
    <h2>All our Restaurants (<%= Restaurant.count %>)</h2>
    <div class="cards-restaurant">
      <% @restaurants.each do |restaurant|%>
        <div class="card-restaurant">
          <%= link_to restaurant_path(restaurant) do %>
            <%= image_tag restaurant.image_url %>
          <% end %>
          <div class="cards-infos-restaurant mb-3">
            <p class="mb-0"><strong><%= restaurant.name %></strong></p>
            <p class="mb-0"><%= "⭐️" * restaurant.rating %></p>
            <p><%= restaurant.cuisine %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
